<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.mapwize.mapwizesimpleapplication.MapActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mapbox_myLocation="true"
        app:mapbox_cameraTargetLat="50.757751"
        app:mapbox_cameraTargetLng="4.348794"
        app:mapbox_styleUrl="mapbox://styles/mapbox/streets-v10"
        app:mapbox_cameraZoom="17" />

</android.support.constraint.ConstraintLayout>